    <script>
        document.querySelectorAll('.slider').forEach(slider => {
            slider.addEventListener('input', function() {
                this.style.background = `linear-gradient(to right, #FF5722 ${this.value}%, #ddd ${this.value}%)`;
            });

            // Trigger input event to set initial background
            slider.dispatchEvent(new Event('input'));
        });
    </script>

